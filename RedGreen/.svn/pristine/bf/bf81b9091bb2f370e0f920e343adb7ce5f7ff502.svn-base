<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ExpandableListView
        android:id="@+id/lvExp_savebattery"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/one_dp"
        android:layout_marginLeft="@dimen/five_dp"
        android:layout_marginRight="@dimen/five_dp"
        android:layout_marginTop="@dimen/five_dp"
        android:groupIndicator="@drawable/expandable_indicator"
        android:indicatorRight="@dimen/twenty_eight_dp"
        android:paddingBottom="@dimen/fifty_fp" />

    <Button
        android:id="@+id/save_battery_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/five_dp"
        android:background="@drawable/button_hdpi"
        android:text="@string/save_battery"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sixteen_sp"
        android:textStyle="bold" />

</RelativeLayout>