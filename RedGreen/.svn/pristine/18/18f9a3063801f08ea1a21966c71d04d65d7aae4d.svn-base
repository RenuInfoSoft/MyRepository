<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ten_dp"
        android:orientation="horizontal"
        android:padding="@dimen/two_dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/eight_dp"
            android:layout_marginRight="@dimen/five_dp"
            android:text="@string/boost_by_memory_dialog_txt_heading"
            android:textColor="@color/app_lock_green"
            android:textSize="@dimen/sixteen_sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_dp"
        android:background="@android:color/holo_green_dark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <Switch
            android:id="@+id/clenmemory_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:checked="true"
            android:clickable="true"
            android:focusable="false"
            android:scaleType="centerInside"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="@dimen/boost_memory_dialog_dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/five_dp"
            android:layout_marginBottom="@dimen/ten_dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/offTextByMemoryText"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/sixty_dp"
                android:gravity="center"
                android:lines="2"
                android:paddingRight="@dimen/five_dp"
                android:text="@string/resid_junk_cache"
                android:textColor="@color/black"
                android:textSize="@dimen/sixteen_sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/twelve_dp"
                android:background="@drawable/rounded_border"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingRight="@dimen/five_dp" >

                <EditText
                    android:id="@+id/boost_memory_for_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:cursorVisible="true"
                    android:inputType="number"
                    android:padding="@dimen/five_dp"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:textColor="@color/app_lock_green"
                    android:textSize="@dimen/sixteen_sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@color/app_lock_white"
                    android:fitsSystemWindows="true"
                    android:gravity="center_vertical"
                    android:text=" MB"
                    android:textColor="@color/app_lock_green"
                    android:textSize="@dimen/thirteen_sp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_lock_green"
        android:gravity="center"
        android:padding="@dimen/ten_dp"
        android:text="@string/done"
        android:textColor="@color/app_lock_white"
        android:textSize="@dimen/sixteen_sp"
        android:textStyle="bold" />

</LinearLayout> <!-- </ScrollView> -->
