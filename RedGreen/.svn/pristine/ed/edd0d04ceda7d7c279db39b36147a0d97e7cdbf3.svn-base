<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/lock_root_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_brand_logo" >

    <!-- CONTAINER -->

    <RelativeLayout
        android:id="@id/lock_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_brand_logo" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/lock_ad_container"
            android:background="@drawable/bg_brand_logo"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ten_dp"
                android:layout_marginTop="@dimen/twenty_dp"
                android:background="@android:color/transparent"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center_vertical"
                    android:background="@android:color/transparent"
                    android:gravity="left"
                    android:text="@string/applock_setemail_text"
                    android:textColor="@color/app_lock_white"
                    android:textSize="@dimen/sixteen_sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/hiding_radio_button_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ten_dp"
                android:layout_marginRight="@dimen/ten_dp"
                android:layout_marginTop="@dimen/ten_dp"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/emailLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_border"
                    android:orientation="vertical"
                    android:paddingRight="@dimen/ten_dp" >

                    <EditText
                        android:id="@+id/edit_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_toLeftOf="@+id/set_email"
                        android:background="@drawable/hdpi_bg_list"
                        android:cursorVisible="true"
                        android:padding="@dimen/twelve_dp"
                        android:paddingLeft="@dimen/five_dp"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:textColor="@color/app_lock_green"
                        android:textSize="@dimen/sixteen_sp" />

                    <TextView
                        android:id="@+id/set_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@color/app_lock_white"
                        android:fitsSystemWindows="true"
                        android:gravity="center_vertical"
                        android:text="@string/applock_email"
                        android:textColor="@color/app_lock_green"
                        android:textSize="@dimen/thirteen_sp" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/ten_dp"
                android:layout_marginTop="@dimen/ten_dp"
                android:background="@android:color/transparent"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/done_forgot_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/app_lock_green"
                    android:text="@string/set_email_done_button"
                    android:textAlignment="center"
                    android:textColor="@color/app_lock_white"
                    android:textSize="@dimen/sixteen_sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ten_dp"
                android:layout_marginTop="@dimen/ten_dp"
                android:background="@android:color/transparent"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center_vertical"
                    android:background="@android:color/transparent"
                    android:gravity="left"
                    android:text="@string/applock_setemail_text_note"
                    android:textColor="@color/app_lock_white"
                    android:textSize="@dimen/sixteen_sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>