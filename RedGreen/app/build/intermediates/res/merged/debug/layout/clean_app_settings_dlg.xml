<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:scrollbars="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ten_dp"
            android:orientation="horizontal"
            android:padding="@dimen/six_dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/eight_dp"
                android:text="@string/dialog_txt"
                android:textColor="@color/app_lock_green"
                android:textSize="@dimen/sixteen_sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/one_dp"
            android:background="@android:color/holo_green_dark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:isScrollContainer="true"
            android:orientation="vertical" >

            <Switch
                android:id="@+id/clenmemory_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:checked="true"
                android:clickable="true"
                android:focusable="false"
                android:scaleType="centerInside"
                android:visibility="visible" />

            <RadioGroup
                android:id="@+id/app_setting_grp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/six_dp" >

                <RadioButton
                    android:id="@+id/week"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/week"
                    android:textSize="@dimen/sixteen_sp" />

                <RadioButton
                    android:id="@+id/days"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/days"
                    android:textSize="@dimen/sixteen_sp" />

                <RadioButton
                    android:id="@+id/month"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/month"
                    android:textSize="@dimen/sixteen_sp" />
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/six_dp"
                android:layout_marginLeft="@dimen/eight_dp"
                android:layout_marginTop="@dimen/six_dp"
                android:padding="@dimen/six_dp"
                android:text="@string/ask_before_delete"
                android:textColor="@color/app_lock_green"
                android:textSize="@dimen/sixteen_sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/one_dp"
                android:background="@color/light_green_txt_color" />

            <RadioGroup
                android:id="@+id/ask_bfore_grp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/six_dp" >

                <RadioButton
                    android:id="@+id/ask_before_on"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/on"
                    android:textSize="@dimen/sixteen_sp" />

                <RadioButton
                    android:id="@+id/ask_before_off"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/off"
                    android:textSize="@dimen/sixteen_sp" />
            </RadioGroup>
        </LinearLayout>

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/app_lock_green"
            android:gravity="center"
            android:padding="@dimen/ten_dp"
            android:text="@string/done"
            android:textColor="@color/app_lock_white"
            android:textSize="@dimen/sixteen_sp"
            android:textStyle="bold" />
    </LinearLayout>

</ScrollView>