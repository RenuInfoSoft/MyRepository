<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/gridlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/baground"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/zero_dp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/four_dp"
            android:layout_weight="1"
            android:baselineAligned="false"
            android:gravity="center"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/cleanapp_image"
                android:layout_width="@dimen/zero_dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="@dimen/two_dp"
                android:layout_marginRight="@dimen/four_dp"
                android:layout_marginTop="@dimen/four_dp"
                android:layout_weight="1"
                android:background="@drawable/layer_background"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    style="@style/btnimage_for_homescreen"
                    android:src="@drawable/cleanapp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/datasecurity_image"
                android:layout_width="@dimen/zero_dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="@dimen/two_dp"
                android:layout_marginRight="@dimen/four_dp"
                android:layout_marginTop="@dimen/four_dp"
                android:layout_weight="1"
                android:background="@drawable/layer_background"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    style="@style/btnimage_for_homescreen"
                    android:src="@drawable/speedbooster" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/zero_dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:baselineAligned="false"
            android:gravity="center"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/savebattery_image"
                android:layout_width="@dimen/zero_dp"
                android:layout_height="fill_parent"
                android:layout_marginBottom="@dimen/four_dp"
                android:layout_marginLeft="@dimen/four_dp"
                android:layout_marginRight="@dimen/two_dp"
                android:layout_marginTop="@dimen/two_dp"
                android:layout_weight="1"
                android:background="@drawable/layer_background"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    style="@style/btnimage_for_homescreen"
                    android:src="@drawable/savebattery" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/applock_image"
                android:layout_width="@dimen/zero_dp"
                android:layout_height="fill_parent"
                android:layout_marginBottom="@dimen/four_dp"
                android:layout_marginLeft="@dimen/four_dp"
                android:layout_marginRight="@dimen/two_dp"
                android:layout_marginTop="@dimen/two_dp"
                android:layout_weight="1"
                android:background="@drawable/layer_background"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    style="@style/btnimage_for_homescreen"
                    android:src="@drawable/applock" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <!-- style="@style/donut_progrss_for_resolutions" -->

    <com.unfoldlabs.redgreen.views.DonutProgress
        android:id="@+id/donut_progress"
        style="@style/donut_progrss_for_resolutions"
        android:layout_centerInParent="true"
        custom:donut_text_size="@dimen/twenty_four_sp"
        custom:donut_finished_stroke_width="@dimen/donut_progress_finished_stroke_width"
        custom:donut_inner_bottom_text="@string/storage_rom"
        custom:donut_inner_bottom_text_color="@color/app_lock_white"
        custom:donut_inner_bottom_text_size="@dimen/ten_dp"
        custom:donut_progress="0"
        custom:donut_unfinished_stroke_width="@dimen/donut_progress_unfinished_stroke_width" />

    <include
        android:id="@+id/container_header_lyt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/homelyt_list"
        android:visibility="gone" />

</RelativeLayout>