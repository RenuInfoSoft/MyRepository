<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/lock_root_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_brand_logo" >

    <!-- CONTAINER -->

    <RelativeLayout
        android:id="@id/lock_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent" >

        <!-- BACKGROUND -->

        <ImageView
            android:id="@id/lock_iv_background"
            android:layout_width="@dimen/thirty_six_dp"
            android:layout_height="@dimen/thirty_six_dp"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop" />

        <!-- HEAD -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/bg_brand_logo"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/ten_dp"
                android:layout_marginLeft="@dimen/eightteen_dp"
                android:layout_marginTop="@dimen/ten_dp"
                android:background="@android:color/transparent"
                android:orientation="vertical"
                android:paddingRight="@dimen/twenty_dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:background="@android:color/transparent"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@id/lock_iv_go_back"
                        android:layout_width="@dimen/thirty_six_dp"
                        android:layout_height="@dimen/thirty_six_dp"
                        android:layout_gravity="center_vertical"
                        android:background="@android:color/transparent"
                        android:src="@drawable/back_arrow" />

                    <ImageView
                        android:id="@id/lock_iv_app_icon"
                        android:layout_width="@dimen/thirty_six_dp"
                        android:layout_height="@dimen/thirty_six_dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/app_icon" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/eight_dp"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@id/lock_tv_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:textColor="@color/app_lock_white"
                            android:textSize="@dimen/twenty_four_sp" />

                        <TextView
                            android:id="@id/lock_tv_footer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/one_dp"
                            android:background="@android:color/transparent"
                            android:textSize="@dimen/sixteen_sp" 
                            android:textColor="@color/app_lock_white" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/entPassword"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/eightteen_dp"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/ten_dp"
                android:text="Please Enter Password"
                android:textColor="@color/app_lock_white"
                android:textSize="@dimen/eighteen_sp" />

            <LinearLayout
                android:id="@id/lock_lockview"
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero_dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/eightteen_dp"
                android:layout_marginRight="@dimen/eightteen_dp"
                android:layout_weight="3"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:orientation="vertical" >

                <!-- This view dynamically adapts to the LockType chosen by the user -->

            </LinearLayout>

            <!-- For continue and cancel buttons -->

            <LinearLayout
                android:id="@id/lock_footer_buttons"
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero_dp"
                android:layout_marginTop="@dimen/zero_dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone" >

                <Button
                    android:id="@id/lock_footer_b_left"
                    style="@style/btnimage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/four_dp"
                    android:layout_marginRight="@dimen/two_dp"
                    android:layout_marginTop="@dimen/four_dp"
                    android:gravity="center"
                    android:textSize="@dimen/sixteen_sp" />

                <Button
                    android:id="@id/lock_footer_b_right"
                    style="@style/btnimage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/four_dp"
                    android:layout_marginRight="@dimen/two_dp"
                    android:layout_marginTop="@dimen/four_dp"
                    android:gravity="center"
                    android:textSize="@dimen/sixteen_sp" >
                </Button>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>