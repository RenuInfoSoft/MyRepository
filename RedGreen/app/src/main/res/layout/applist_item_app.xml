<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/applist_item_app"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/eight_dp"
    android:paddingLeft="@dimen/zero_dp"
    android:paddingRight="@dimen/zero_dp"
    android:paddingTop="@dimen/eight_dp" >

    <ImageView
        android:id="@+id/listIcon"
        android:layout_width="@dimen/fourty_dp"
        android:layout_height="@dimen/fourty_dp"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="@dimen/ten_dp" />

    <TextView
        android:id="@+id/listName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"


        android:singleLine="true"
 android:maxLength="20"
        android:textColor="@color/black"
        android:textIsSelectable="false"
        android:textSize="@dimen/sixteen_sp"
        android:layout_toLeftOf="@+id/applist_item_image"
        android:layout_toRightOf="@+id/listIcon"
        android:layout_toEndOf="@+id/listIcon" />

    <Switch
        android:id="@+id/applist_item_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:clickable="false"
        android:focusable="false"
        android:scaleType="centerInside"
        android:visibility="visible" />
    <!-- android:src="@drawable/ic_action_secure_holo_light" -->

</RelativeLayout>