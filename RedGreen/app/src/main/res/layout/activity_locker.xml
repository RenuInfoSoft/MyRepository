<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lock_root_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_brand_logo" >

    <!-- CONTAINER -->

    <RelativeLayout
        android:id="@+id/lock_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent" >

        <!-- BACKGROUND -->

        <ImageView
            android:id="@+id/lock_iv_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop" />

        <!-- HEAD -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:background="@drawable/bg_brand_logo"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/actionbar_for_lock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/actionbar_baground"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/five_dp"
                android:visibility="gone" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/five_dp"
                    android:src="@drawable/action_bar_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="APP LOCK"
                    android:textColor="@color/app_lock_white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/twenty_dp"
                android:background="@android:color/transparent"
                android:orientation="horizontal"
                android:paddingRight="@dimen/twenty_dp" >

                <ImageView
                    android:id="@+id/logo_redGreen"
                    android:layout_width="@dimen/thirty_six_dp"
                    android:layout_height="@dimen/thirty_six_dp"
                    android:layout_gravity="center_vertical"
                    android:background="@android:color/transparent"
                    android:src="@drawable/app_icon"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/fifteen_dp"
                    android:background="@android:color/transparent"
                    android:orientation="vertical"
                    android:paddingRight="@dimen/twenty_dp" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:background="@android:color/transparent"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/lock_iv_go_back"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:background="@android:color/transparent"
                            android:src="@drawable/back_arrow"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/lock_iv_app_icon"
                            style="@style/locker_app_icon_iamgeview"
                            android:src="@drawable/app_icon" />

                        <TextView
                            android:id="@+id/lock_tv_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:singleLine="true"
                            android:layout_marginLeft="@dimen/ten_dp"
                            android:background="@android:color/transparent"
                            android:text="@string/app_name"
                            android:textColor="@color/app_lock_white"
                            android:textSize="@dimen/twenty_four_sp" >
                        </TextView>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/lock_tv_footer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/ten_dp"
                        android:background="@android:color/transparent"
                        android:textAppearance="@android:style/TextAppearance.Small"
                        android:textColor="@color/app_lock_white"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>
            <!-- </ScrollView> -->
            <!-- LOCKVIEW -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/twenty_two_dp"
                android:layout_marginRight="@dimen/twenty_two_dp"
                android:background="@android:color/transparent"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/entPassword"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                 android:paddingTop="@dimen/ten_dp"
                    android:paddingBottom="@dimen/ten_dp"
                    android:text="@string/enterpassword"
                    android:textColor="@color/app_lock_white"
                    android:textSize="@dimen/eighteen_sp" />

               <!-- <ImageView
                    android:id="@+id/forgot_password_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:src="@drawable/forgot_password_icon_new_size" />-->
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/lock_lockview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/twenty_two_dp"
                android:layout_marginRight="@dimen/twenty_two_dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:orientation="vertical" >
            </LinearLayout>

            <!-- For continue and cancel buttons -->

            <LinearLayout
                android:id="@+id/lock_footer_buttons"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/zero_dp"
                android:layout_marginTop="@dimen/zero_dp"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone" >

                <Button
                    android:id="@+id/lock_footer_b_left"
                    style="@style/btnimage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/four_dp"
                    android:layout_marginRight="@dimen/two_dp"
                    android:layout_marginTop="@dimen/four_dp"
                    android:gravity="center"
                    android:textSize="@dimen/sixteen_sp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/lock_footer_b_right"
                    style="@style/btnimage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="@dimen/sixteen_sp" >
                </Button>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/twenty_two_dp"
                android:layout_marginRight="@dimen/twenty_two_dp"
                android:background="@android:color/transparent"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/forgot_password"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:padding="@dimen/ten_dp"
                    android:text="Forgot Password?"
                    android:textStyle="bold"
                    android:textColor="@color/app_lock_green"
                    android:textSize="@dimen/eighteen_sp" />

            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>