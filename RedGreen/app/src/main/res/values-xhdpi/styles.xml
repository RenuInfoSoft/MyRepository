<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.Application" parent="@android:style/Theme.Holo.Light">
        <item name="android:colorBackground">@android:color/white</item>
        <item name="colorPrimary">@color/material_blue_grey_900</item>
        <item name="colorPrimaryDark">@color/material_blue_grey_950</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="colorAccent">@color/material_deep_teal_500</item>
        <item name="android:dividerHeight">2dp</item>
        <item name="android:listChoiceIndicatorMultiple">@drawable/btn_check_light</item>
        <item name="android:actionOverflowButtonStyle">@style/MyCustomTheme.OverFlow</item>
        <item name="android:homeAsUpIndicator">@drawable/back_arrow</item>
    </style>

    <style name="Theme.Settings" parent="@style/Theme.Application">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="toolbarStyle">@style/Widget.Toolbar</item>
    </style>

    <style name="MyCustomTheme.OverFlow" parent="@android:style/Widget.ActionButton.Overflow">
        <item name="android:src">@drawable/menu_icon</item>
    </style>

    <style name="Widget.Toolbar" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="navigationIcon">?attr/homeAsUpIndicator</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="CustomActionBarTheme" parent="@style/Theme.Application">
        <item name="android:windowActionBar">true</item>
        <item name="android:windowActionBarOverlay">false</item>
        <item name="android:popupMenuStyle">@style/MyPopupMenu</item>
        <item name="android:selectableItemBackground">@drawable/selectable_background_example</item>
        <item name="android:textColorPrimary">@color/app_lock_white</item>
        <item name="android:itemTextAppearance">@style/itemTextStyle.AppTheme</item>
    </style>

    <style name="itemTextStyle.AppTheme" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/app_lock_green</item>
        <item name="android:textSize">@dimen/sixteen_sp</item>
    </style>

    <!-- style the overflow menu -->
    <style name="MyPopupMenu" parent="android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@color/app_lock_white</item>
    </style>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <!--
        <item name="colorPrimary">#259b24</item>
        <item name="colorPrimaryDark">#0a7e07</item>
        <item name="colorAccent">#ffa000</item>
        -->
    </style>
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:buttonStyle">@style/Theme_Button</item>
    </style>

    <style name="LockActivityTheme" parent="AppBaseTheme">
        <item name="android:buttonStyle">@style/btnimage</item>
        <item name="android:imageButtonStyle">@style/btnimage</item>
        <item name="android:textColor">@color/app_lock_green</item>
    </style>

    <style name="ApplistTheme" parent="AppBaseTheme">
        <item name="android:buttonStyle">@style/Theme_Applist_Button</item>
        <!-- <item name="android:textColor">#ffffff</item> -->
    </style>

    <style name="Theme_Button" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/main_button_background</item>
        <item name="android:textColor">@color/app_lock_white</item>
        <item name="android:padding">@dimen/ten_dp</item>
    </style>

    <style name="Theme_Lock_Button" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/passwordview_button_background</item>
        <item name="android:textColor">@color/app_lock_white</item>
        <item name="android:padding">@dimen/ten_dp</item>
        <item name="android:textSize">@dimen/sixteen_sp</item>
    </style>

    <!-- Following style is for app lock screen button background image set -->
    <style name="btnimage">
        <item name="android:textColor">@color/app_lock_white</item>
        <item name="android:background">@drawable/selector</item>
        <item name="android:textSize">@dimen/sixteen_sp</item>
    </style>

    <style name="btnimage_viewlock_number">
        <item name="android:textColor">@color/app_lock_white</item>
        <item name="android:background">@drawable/selector</item>
        <item name="android:textSize">@dimen/sixteen_sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!-- Following style is for home screen button background image set -->
    <style name="btnimage_for_homescreen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">@dimen/home_image_dimen</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Following style is for donut progress -->
    <style name="donut_progrss_for_resolutions">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/ten_dp</item>
    </style>

    <!-- Following style is for activity.locker.xml applock appicon -->
    <style name="locker_app_icon_iamgeview">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <!--
    <style name="btnoval">
        <item name="android:textColor">#5D8C02</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/btnoval</item>
    </style>
    -->

    <style name="Theme_Lock_ImageButton" parent="@android:style/Widget.ImageButton">
        <item name="android:background">@drawable/passwordview_button_background</item>
        <item name="android:padding">@dimen/zero_dp</item>
    </style>

    <style name="Theme_Applist_Button" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/applist_button_background</item>
        <item name="android:textColor">@color/app_lock_white</item>
        <item name="android:padding">@dimen/zero_dp</item>
    </style>

    <!-- For StagingActivity -->
    <style name="Theme_Transparent" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!-- For navigation drawer -->
    <style name="ButtonBarButton">
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/app_lock_white</item>
    </style>

    <style name="ButtonBar" parent="@android:style/ButtonBar">
        <item name="android:background">@color/black</item>
    </style>

    <style name="Common.Small" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/aash</item>
    </style>

    <style name="NavigationItemSelector">
        <item name="android:background">@drawable/selectable_background_listitem</item>
    </style>

</resources>